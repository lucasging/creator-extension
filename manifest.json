{
    "name": "Creator Recruitment Tool",
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "https://*.instagram.com/*"
    ],
    "version": "1.0",
    "description": "Speeds up recruitment using the Creator.co platform.",
    "manifest_version": 3,
    "author": "Lucas Gingera",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*.instagram.com/*"],
            "js": ["instagram.js"]
        },
        {
            "matches": ["https://*.creator.co/creator-search"],
            "js": ["creator.js"]
        }
    ],
    "web_accessible_resources": [{
        "resources": ["check.png", "x.png", "profiles.json"],
        "matches": ["https://*.instagram.com/*"]
    }]
}