{
    "name": "Creator Recruitment Tool",
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "https://*.instagram.com/*",
        "https://*.tiktok.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "version": "1.0",
    "description": "Speeds up recruitment using the Creator.co platform.",
    "manifest_version": 3,
    "author": "Lucas Gingera",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*.instagram.com/*", "https://*.tiktok.com/*"],
            "js": ["panel.js"]
        },
        {
            "matches": ["https://*.creator.co/*"],
            "js": ["creator.js"]
        }
    ],
    "web_accessible_resources": [{
        "resources": ["assets/*"],
        "matches": ["https://*.instagram.com/*", "https://*.tiktok.com/*"]
    }]
}